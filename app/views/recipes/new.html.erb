　<%= render 'layouts/errors', obj: f.object %>
<% end %>



<div class="container">

  <%= form_with model: @recipe, local:true do |f| %>

  <div class="row">
    <div class="col-xs-4">
     <h4>New Recipe</h4>

     <table>
      <tr>
       <th>レシピ画像</th>
       <td><%= f.attachment_field :image %></td>
      </tr>

      <tr>
       <th>レシピ名</th>
       <td><%= f.text_field :name, placeholder: "レシピ名", size: "30", class: "form-control" %></td>
      </tr>

      <tr>
       <th>ジャンル</th>
       <td><%= f.collection_select :genre_id, Genre.all, :id, :name, size: "30", class: "form-control" %></td>
      </tr>

      <tr>
       <div id="ingredients" class="form-group">
       <th>材料</th>
       <td>
        <%= f.fields_for :recipe_ingredients do |builder| %>
         <%= render 'recipe_ingredient_fields', f: builder %>
          <div id="links">
           <td><%= link_to_add_association "+", f, :recipe_ingredients %></td><br/>
          </div>
        <% end %>
        </td>
       </div>
      </tr>

     <tr>
      <th>レシピ</th>
      <td><%= f.text_area :step, placeholder: "レシピを記入してください", size: "30x5", class: "form-control" %></td>
    </tr>
</table>

　 　<div class="text-center">
　 　  <%= f.submit "レシピを登録", class: 'btn btn-outline-secondary' %>
　 　</div>

　　</div>
　</div>
 <% end %>
</div><!--container-->
