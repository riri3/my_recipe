<div class="nested-fields form-inline">

      <li>
        <%= f.label :"材料名" %>
        <%= f.text_field :name, placeholder: "材料名", size: "20", class: "form-control" %>
      </li>

      <li>
        <%= f.label :"単位" %>
        <%= f.text_field :unit, placeholder: "本", size: "10", class: "form-control" %>
      </li>

      <li>
        <%= f.label :"分量" %>
        <%= f.number_field :quantity, placeholder: "1.5", min: '0.0', steps: '0.5', size: "5", class: "form-control" %>
      </li>

  <%#= link_to_remove_association "削除", f, :ingredients %>

</div>