<ul class="nested-fields form-inline" style="list-style-type:none">

      <li>
        <!--材料名"-->
        <%= f.text_field :name, placeholder: "たまご", size: "20", class: "form-control" %>
      </li>

      <li>
        <!--分量-->
        <%= f.number_field :quantity, placeholder: "3", min: '0.0', step: '0.1', size: "5", class: "form-control" %>
      </li>

      <li>
        <!--単位-->
        <%= f.text_field :unit, placeholder: "個", size: "10", class: "form-control" %>
      </li>

       <%= link_to_remove_association "", f, class: "fas fa-trash-alt delete_icon" %>
</ul>