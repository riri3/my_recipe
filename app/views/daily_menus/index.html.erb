<div class="container">
  <div class="row">
   <img src="<%= asset_path("logo.png") %>" class="d-block mx-auto" alt=""></img>
  </div>


  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table table-hover">

        <h4>献立作成ページ</h4>
         <%= form_with model: @daily_menu do |f| %>
           <label for="menu">日付</label>
           <p><%= f.date_field :setting_date %></p>

           <label for="meal_time">朝/昼/夜</label>
           <p><%= f.collection_select :meal_time_id, MealTime.all, :id, :name, prompt: "--選択してください--", size: "30", class: "form-control" %></p>

           <label for="recipe">レシピ</label>
           <p><%= f.collection_select :recipe_id, Recipe.all, :id, :name, prompt: "--選択してください--", size: "30", class: "form-control"  %></p>

           <p><= f.datetime_select :start_time%></p>


               <%= f.submit "登録する", class: 'btn btn-outline-secondary' %>


     <%# end %>
  <!-- </div>-->
  <!--</div>-->

      </table>
   </div>
  </div>
</div>