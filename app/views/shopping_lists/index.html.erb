<div class="container">
    <div class="row">
      <div class="col-md-10 mx-auto">
        <h4>shopping List</h4>
        <br>
        <h6>
          献立に必要なお買い物リストです。<br>
          （チェックボックスは保存されません。簡易的なチェックにお使いください。）
        </h6>
        <br>

        <%= link_to "先週", shopping_lists_path(target: "previous_week") %>
        <%= link_to "今週", shopping_lists_path(target: "this_week") %>
        <%= link_to "来週", shopping_lists_path(target: "next_week") %>

        <% @ingredients.each do |ingredient| %>
         <div class="form-check">
           <input class="form-check-input" type="checkbox" id=shopping_list>
           <label class="form-check-label" for=daily_menu>
             <%= ingredient.name %><!--材料名-->
             <%= ingredient.quantity %><!--量-->
             <%= ingredient.unit %><!--単位-->
           </label>
         </div>
        <% end %>

        <br />

        <%= form_with model: @memo, class: 'js-form' do |f| %>
          <h6>memo</h6>
          <%= f.text_field :memo, placeholder: "メモ", placeholder: "おやつを忘れずに買う！", size: "30x5", class: "form-control memo-text" %>

          <br />

          <div class="text-center">
            <%= f.submit "メモを登録する", class: 'btn btn-outline-secondary' %>
            <%#= link_to "メモを編集する", edit_shopping_list_path(@memo.id), class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>

        <div class="all-memos">
 　　　　　　　<% @memos.each do |memo| %>
 　　　　 　　　 <div id='memo_<%= memo.id %>'>
          　<%= render 'shopping_lists/memo', memo: memo %>
           </div>
          <% end %>
        </div>

      </div>
    </div>
</div>